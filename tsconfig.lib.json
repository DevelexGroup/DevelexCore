{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"]
    },
    "types": ["svelte", "vite/client"]
  },
  "include": ["src/lib/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"]
}


